@{
    ViewData["Title"] = "Delete Teacher Page";
}
@model Teacher

<h2>Delete Teacher</h2>

<div>
    <h4>Teacher Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Last name</dt>
        <dd class="col-sm-10">@Model.Lastname</dd>
        <dt class="col-sm-2">First name</dt>
        <dd class="col-sm-10">@Model.Firstname</dd>
        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>
        <dt class="col-sm-2">Material</dt>
        <dd class="col-sm-10">@Model.Material</dd>
    </dl>
    <h3>Are you sure you want to get delete of this Teacher?</h3>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>