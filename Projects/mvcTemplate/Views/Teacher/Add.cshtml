@{
    ViewData["Title"] = "Add Teacher Page";
}
@model Teacher

<h2>
    <Address> add new Teacher</Address>
</h2>

<form asp-action="Add" asp-controller="Teacher" method="post">
    <div class="form-group">
        <label asp-for="Firstname"></label>
        <input asp-for="Firstname" class="form-control" />
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lastname"></label>
        <input asp-for="Lastname" class="form-control" />
        <span asp-validation-for="Lastname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Material"></label>
        <select asp-for="Material">
            <option value="">--Please choose an option--</option>
            <option asp-for="Material">CS</option>
            <option asp-for="Material">IT</option>
            <option asp-for="Material">MATHS</option>
            <option asp-for="Material">OTHER</option>
        </select>
        <span asp-validation-for="Material" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Add Teacher" />

</form>

<a asp-action="Index" class="btn btn-secondary">Back to list</a>